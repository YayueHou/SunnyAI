.list-image{
  margin-left:4%;
  display: flex;
  flex-wrap: wrap;
  height:70rpx;
  width:70rpx;
  flex-direction: row ;
}
.next-image{
  margin-left:41%;
  display: flex;
  flex-wrap: wrap;
  height:60rpx;
  width:60rpx;
}
.list-name{
  margin-left:6%;
  font-size: 44rpx;
  text-align: left;
  font-family: Arial;
  font-weight:400;
  white-space:pre-wrap;
}

