/* pages/rank/rank.wxss */
page {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.top-3-box {
  width: 750rpx;
  height: 410rpx;
  background-color: #BBE0ED;
  display: flex;
}

.top-3-item {
  display: flex;
  flex: 1;
  height: 100%;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  position: relative;
}

.rank-desc {
  position: absolute;
}

.desc1 {
  width: 68rpx;
  height: 68rpx;
  top: 84rpx;
  left: 110rpx;
  transform: rotate(18deg);
}

.desc2 {
  width: 84rpx;
  height: 84rpx;
  top: 38rpx;
}

.desc3 {
  width: 68rpx;
  height: 68rpx;
  top: 76rpx;
  left: 84rpx;
  transform: rotate(-12deg);
}

.user-icon {
  width: 92rpx;
  height: 92rpx;
  background-size: 100% 100%;
  background: #eee;
  border-radius: 50%;
}

.user-name {
  color: rgba(83, 157, 182, 100);
  font-size: 14px;
  margin-top: 40rpx;
}

.user-rank {
  color: rgba(255, 183, 45, 100);
  font-size: 40rpx;
  font-family: PingFangSC-bold;
  margin-top: 36rpx;
  margin-bottom: 20rpx;
}

.top-3-item.no-2 .user-icon {
  width: 120rpx;
  height: 120rpx;
  margin-top: -28rpx;
}

.rank-list {
  width: 690rpx;
  margin: 14rpx auto;
  border: 1px solid rgba(187, 187, 187, 100);
  border-radius: 16rpx;
}

.my-rank {
  display: flex;
  align-items: center;
  width: 630rpx;
  height: 100rpx;
  margin: 24rpx auto 60rpx auto;
  border-radius: 16rpx;
  box-shadow: 0px 2px 6px 0px rgba(204, 204, 204, 100);
  border: 1px solid rgba(255, 255, 255, 100);
  padding: 14rpx;
}

.my-rank-title {
  color: rgba(59, 177, 155, 100);
  font-size: 24rpx;
  text-align: left;
  width: 60rpx;
  font-family: PingFangSC-regular;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 120px;
}

.user-nickname {
  color: rgba(16, 16, 16, 100);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  max-width: 120rpx;
  margin-left: 8px;
}

.user-integral {
  color: rgba(16, 16, 16, 100);
  font-size: 24rpx;
  margin-left: 12px;
  font-family: PingFangSC-regular;
}

.user-ranking {
  color: rgba(56, 130, 130, 100);
  font-size: 24rpx;
  flex: 1;
  text-align: right;
  font-family: PingFangSC-regular;
}

.rank-table {
  margin-top: 60rpx;
  margin: 60rpx 30rpx;
}

.rank-table-head {
  display: flex;
  color: rgba(151, 134, 134, 100);
  font-size: 28rpx !important;
  font-family: PingFangSC-regular;
}

.rank-table-item {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.ranking {
  width: 60rpx;
  display: flex;
  margin-right: 60rpx;
}

.ranking,
.currency {
  flex-shrink: 0;
}

.nickname {
  flex: 1;
}

.rank-table-item .ranking {
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  justify-content: center;
}

.rank-table-item .ranking image {
  width: 56rpx;
  height: 56rpx;
}

.rank-table-item .nickname {
  color: rgba(16, 16, 16, 100);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  display: flex;
  align-items: center;
}

.rank-table-item .nickname image {
  margin-right: 16rpx;
  flex-shrink: 0;
}

.rank-table-item .currency {
  color: rgba(59, 177, 155, 100);
  font-size: 28rpx;
  text-align: right;
  width: 120rpx;
  font-family: PingFangSC-regular;
}