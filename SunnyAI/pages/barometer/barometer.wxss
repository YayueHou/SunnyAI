/* pages/barometer/barometer.wxss */
.chart-container {
  background-color: rgba(187, 224, 237, 100);
  width: 750rpx;
  height: 600rpx;
  padding: 40rpx 16rpx;
}

.line-block {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 8rpx;
}

.canvas {
  position: absolute;
  width: 720rpx;
  height: 50%;
  top: 10%;
}

.line-block .title {
  padding: 36rpx;
  color: rgba(135, 140, 151, 100);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}

.mood-block {
  margin-top: 80rpx;
}

.mood-desc {
  margin-bottom: 40rpx;
  text-align: center;
  color: rgba(29, 21, 42, 100);
  font-size: 40rpx;
  font-family: PingFangSC-regular;
}
.mood-desc text{
  color: rgba(255, 68, 0, 100);
}